{
  "name": "typescript-express-exam",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript + Express + Mongoose + MongoDB",
  "author": "Robert Anthony Tribiana",
  "engines": {
    "node": "^20.10.x",
    "yarn": "1.x"
  },
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "postinstall": "npx husky install",
    "seed": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --transpile-only src/utils/seeder.ts",
    "clean": "rimraf dist",
    "clearDB": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --transpile-only src/utils/clearDB.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mjml": "^4.14.1",
    "moment-timezone": "^0.5.43",
    "mongoose": "^6.12.3",
    "morgan": "^1.10.0",
    "otp-generator": "^4.0.1",
    "randomatic": "^3.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^28.1.8",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "app-module-path": "^2.2.0",
    "axios-mock-adapter": "^1.22.0",
    "casual": "^1.6.2",
    "commander": "^11.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express-list-endpoints": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "node-config": "^0.0.2",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "swagger-jsdoc": "^6.2.8"
  }
}
